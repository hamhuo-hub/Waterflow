<Window x:Class="Waterflow.UI.FlightPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlightPanel" 
        Width="400" Height="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual">
    <Border CornerRadius="8" 
            Background="#F0F0F0" 
            BorderBrush="#CCCCCC" 
            BorderThickness="1"
            Padding="12">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                              ShadowDepth="2" 
                              Color="#40000000" />
        </Border.Effect>
        <Grid>
            <TextBox x:Name="TaskInputBox"
                     FontSize="16"
                     Padding="8,4"
                     BorderThickness="1"
                     BorderBrush="#999999"
                     Background="White"
                     VerticalContentAlignment="Center"
                     KeyDown="TaskInputBox_KeyDown"
                     LostFocus="TaskInputBox_LostFocus"/>
        </Grid>
    </Border>
</Window>


