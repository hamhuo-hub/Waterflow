<Window x:Class="Waterflow.UI.OperationWheel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OperationWheel" 
        Width="300" Height="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        MouseDown="Window_MouseDown"
        KeyDown="Window_KeyDown">
    <Canvas x:Name="WheelCanvas" 
            Width="300" Height="300"
            MouseLeftButtonDown="WheelCanvas_MouseLeftButtonDown"
            MouseMove="WheelCanvas_MouseMove"
            MouseLeave="WheelCanvas_MouseLeave"
            KeyDown="WheelCanvas_KeyDown"
            Focusable="True">
        <!-- 轮盘背景圆形 -->
        <Ellipse Canvas.Left="0" Canvas.Top="0" 
                 Width="300" Height="300"
                 Fill="#F0F0F0"
                 Stroke="#CCCCCC"
                 StrokeThickness="2">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="15" 
                                  ShadowDepth="3" 
                                  Color="#40000000" />
            </Ellipse.Effect>
        </Ellipse>
        
        <!-- 上方扇形：新建任务 (0-90度，从上方开始) -->
        <Path x:Name="NewTaskSector" 
              Canvas.Left="0" Canvas.Top="0"
              Fill="#4CAF50"
              Opacity="0.8"
              Cursor="Hand"
              MouseEnter="Sector_MouseEnter"
              MouseLeave="Sector_MouseLeave">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="150,150" IsClosed="True">
                        <LineSegment Point="150,0"/>
                        <ArcSegment Point="300,150" 
                                   Size="150,150" 
                                   SweepDirection="Clockwise"
                                   IsLargeArc="False"/>
                        <LineSegment Point="150,150"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        
        <!-- 右侧扇形：任务挂起/焦点切换 (90-180度) -->
        <Path x:Name="SuspendSector" 
              Canvas.Left="0" Canvas.Top="0"
              Fill="#FF9800"
              Opacity="0.8"
              Cursor="Hand"
              MouseEnter="Sector_MouseEnter"
              MouseLeave="Sector_MouseLeave">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="150,150" IsClosed="True">
                        <LineSegment Point="300,150"/>
                        <ArcSegment Point="150,300" 
                                   Size="150,150" 
                                   SweepDirection="Clockwise"
                                   IsLargeArc="False"/>
                        <LineSegment Point="150,150"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        
        <!-- 下方扇形：任务完成 (180-270度) -->
        <Path x:Name="CompleteSector" 
              Canvas.Left="0" Canvas.Top="0"
              Fill="#2196F3"
              Opacity="0.8"
              Cursor="Hand"
              MouseEnter="Sector_MouseEnter"
              MouseLeave="Sector_MouseLeave">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="150,150" IsClosed="True">
                        <LineSegment Point="150,300"/>
                        <ArcSegment Point="0,150" 
                                   Size="150,150" 
                                   SweepDirection="Clockwise"
                                   IsLargeArc="False"/>
                        <LineSegment Point="150,150"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        
        <!-- 左侧扇形：预留 (270-360度) -->
        <Path x:Name="ReservedSector" 
              Canvas.Left="0" Canvas.Top="0"
              Fill="#9E9E9E"
              Opacity="0.8"
              Cursor="Hand"
              MouseEnter="Sector_MouseEnter"
              MouseLeave="Sector_MouseLeave">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="150,150" IsClosed="True">
                        <LineSegment Point="0,150"/>
                        <ArcSegment Point="150,0" 
                                   Size="150,150" 
                                   SweepDirection="Clockwise"
                                   IsLargeArc="False"/>
                        <LineSegment Point="150,150"/>
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        
        <!-- 中心圆形 -->
        <Ellipse Canvas.Left="120" Canvas.Top="120" 
                 Width="60" Height="60"
                 Fill="White"
                 Stroke="#CCCCCC"
                 StrokeThickness="2"/>
        
        <!-- 标签文字 -->
        <!-- 上方：新建任务 -->
        <TextBlock Canvas.Left="110" Canvas.Top="30" 
                   Text="新建任务" 
                   FontSize="12" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   IsHitTestVisible="False"/>
        
        <!-- 右侧：任务挂起 -->
        <TextBlock Canvas.Left="240" Canvas.Top="140" 
                   Text="挂起" 
                   FontSize="12" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   IsHitTestVisible="False"/>
        
        <!-- 下方：任务完成 -->
        <TextBlock Canvas.Left="110" Canvas.Top="260" 
                   Text="完成" 
                   FontSize="12" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   IsHitTestVisible="False"/>
        
        <!-- 左侧：预留 -->
        <TextBlock Canvas.Left="20" Canvas.Top="140" 
                   Text="预留" 
                   FontSize="12" 
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   IsHitTestVisible="False"/>
    </Canvas>
</Window>

